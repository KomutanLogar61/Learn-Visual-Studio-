//For Turkish Users.

Public Class Form1
    Dim s1, s2 As Integer
    Dim sonuc As Double
    Private Sub Button1_Click(sender As Object, e As EventArgs) Handles Button1.Click
        s1 = TextBox1.Text
        s2 = TextBox2.Text
        sonuc = s1 + s2
        Label4.Text = sonuc
    End Sub

    Private Sub Button2_Click(sender As Object, e As EventArgs) Handles Button2.Click
        s1 = TextBox1.Text
        s2 = TextBox2.Text
        sonuc = s1 - s2
        Label4.Text = sonuc
    End Sub

    Private Sub Button3_Click(sender As Object, e As EventArgs) Handles Button3.Click
        s1 = TextBox1.Text
        s2 = TextBox2.Text
        sonuc = s1 * s2
        Label4.Text = sonuc
    End Sub

    Private Sub Button4_Click(sender As Object, e As EventArgs) Handles Button4.Click
        s1 = TextBox1.Text
        s2 = TextBox2.Text
        sonuc = s1 / s2
        Label4.Text = sonuc
    End Sub

    Private Sub Button5_Click(sender As Object, e As EventArgs) Handles Button5.Click
        s1 = TextBox1.Text
        sonuc = Math.Pow(s1, 2)
        Label4.Text = sonuc
    End Sub

    Private Sub Button6_Click(sender As Object, e As EventArgs) Handles Button6.Click
        s1 = TextBox1.Text
        sonuc = Math.Sqrt(s1)
        Label4.Text = sonuc
    End Sub
End Class


//For Other Nations.

Public Class Form1                                                                      //n : number
    Dim n1, n2 As Integer
    Dim result As Double
    Private Sub Button1_Click(sender As Object, e As EventArgs) Handles Button1.Click
        n1 = TextBox1.Text
        n2 = TextBox2.Text
        result = n1 + n2
        Label4.Text = result
    End Sub

    Private Sub Button2_Click(sender As Object, e As EventArgs) Handles Button2.Click
        n1 = TextBox1.Text
        n2 = TextBox2.Text
        result = n1 - n2
        Label4.Text = result
    End Sub

    Private Sub Button3_Click(sender As Object, e As EventArgs) Handles Button3.Click
        n1 = TextBox1.Text
        n2 = TextBox2.Text
        result = n1 * n2
        Label4.Text = result
    End Sub

    Private Sub Button4_Click(sender As Object, e As EventArgs) Handles Button4.Click
        n1 = TextBox1.Text
        n2 = TextBox2.Text
        result = n1 / n2
        Label4.Text = result
    End Sub

    Private Sub Button5_Click(sender As Object, e As EventArgs) Handles Button5.Click
        n1 = TextBox1.Text
        result = Math.Pow(n1, 2)
        Label4.Text = result
    End Sub

    Private Sub Button6_Click(sender As Object, e As EventArgs) Handles Button6.Click
        n1 = TextBox1.Text
        result = Math.Sqrt(n1)
        Label4.Text = result
    End Sub
End Class

